---
import Layout from '../layouts/Layout.astro';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Starry Night</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-black flex items-center justify-center overflow-hidden">
    <div class="relative w-full h-screen">
      <!-- Generate 100 stars -->
      {
        Array.from({ length: 100 }).map(() => (
          <div
            class="absolute rounded-full bg-white opacity-80"
            style={`top: ${Math.random() * 100}%; left: ${Math.random() * 100}%; width: ${Math.random() * 3 + 1}px; height: ${Math.random() * 3 + 1}px;`}
          ></div>
        ))
      }
      <div class="absolute bottom-8 w-full text-center text-white text-2xl font-semibold">
        TailwindCSS is working! ðŸŒ 
      </div>
    </div>
  </body>
</html>
